<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>

    <!-- CSS styles -->
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <!-- Google Fonts  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>

    <div class="carrier px-5 pt-4">

      <h1 class="font-bold text-4xl pb-7 text-center">{{accesser.heading}}</h1>

      <div
        class="main-row grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 mb-4 gap-x-5 gap-y-5"
      >
        {{#each accesser.imageHolder}}
          <div
            class="box border border-gray-400 hover:border-black p-2 rounded-sm"
          >
            <div class="image-div">
              <img
                src="/images/{{this.image}}.jpg"
                class="transform hover:-translate-y-1 transition duration-300 ease-in-out"
              />
            </div>
            <div class="description text-center mt-2">{{this.description}}</div>
          </div>
        {{/each}}
      </div>
    </div>
    <!-- Website scripts  -->
    <script src="/javascripts/app.js"></script>
  </body>

</html>